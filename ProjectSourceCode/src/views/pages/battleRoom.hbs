<div class="container my-5">
  <h2 id="roundTitle">Round 1</h2>

  <div class="row text-center mb-4">
    <div class="col">
      <h4>{{username}}</h4>
      <div id="userCardName" class="fw-bold"></div>
      <div id="userStats" class="text-muted small"></div>
      <div class="progress"><div id="userHP" class="progress-bar" style="width:100%"></div></div>
    </div>
    <div class="col">
      <h4>{{opponent}}</h4>
      <div id="oppCardName" class="fw-bold"></div>
      <div id="oppStats" class="text-muted small"></div>
      <div class="progress"><div id="oppHP" class="progress-bar" style="width:100%"></div></div>
    </div>
  </div>

  <div class="d-flex gap-2 justify-content-center mb-3">
    <button id="rollBtn" class="btn btn-warning">Roll Dice</button>
    <button id="attackBtn" class="btn btn-primary" disabled>Battle!</button>
  </div>

  <pre id="logBox" class="bg-light p-3 rounded" style="height:200px; overflow:auto"></pre>
  <h3 id="scoreBoard" class="mt-4">Score 0‑0</h3>
  <div id="winnerBanner" class="h2 mt-3 text-center fw-bold"></div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
  window.BATTLE_DATA = {
    username: "{{username}}",
    opponent: "{{opponent}}",
    userCards: {{{userCards}}},
    oppCards: {{{oppCards}}},
    roomCode: "{{roomCode}}"
  };
</script>
<script src="/resources/js/battleRoomClient.js"></script>