{{! no layout boilerplate shown }}
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<link rel="stylesheet" href="/resources/css/battle.css">

<div class="container my-5">
  <h2 id="roundTitle">Round 1</h2>

  <div class="row text-center mb-4">
    <div class="col">
      <h4>{{username}}</h4>
      <div id="userCardName" class="fw-bold"></div>
      <img id="userCardImage" class="battle-card-img mb-2" style="max-width: 150px;">
      <div id="userStats" class="text-muted small"></div>
      <div class="progress"><div
          id="userHP"
          class="progress-bar bg-success"
          style="width:100%"
        ></div></div>
    </div>
    <div class="col">
      <h4>Bot</h4>
      <img id="botCardImage" class="battle-card-img mb-2" style="max-width: 150px;">
      <div id="botCardName" class="fw-bold"></div>
      <div id="botStats" class="text-muted small"></div>
      <div class="progress"><div
          id="botHP"
          class="progress-bar bg-danger"
          style="width:100%"
        ></div></div>
    </div>
  </div>

  <div class="d-flex gap-2 justify-content-center mb-3">
    <button id="rollBtn" class="btn btn-warning">Roll Dice</button>
    <button id="battleBtn" class="btn btn-primary">Battle!</button>
  </div>

  <pre
    id="logBox"
    class="bg-light p-3 rounded"
    style="height:200px; overflow:auto"
  ></pre>

  <h3 id="scoreBoard" class="mt-4">Score 0‑0</h3>
  <div id="winnerBanner" class="h2 mt-3 text-center fw-bold"></div>

  <div class="d-flex justify-content-between align-items-center mt-4" id="deckSummary">
    <div class="d-flex gap-2" id="userDeckSummary"></div>
    <div class="d-flex gap-2" id="botDeckSummary"></div>
  </div>

</div>

<script>
  window.BATTLE_DATA = { userCards:
  {{{userCards}}}, botCards :
  {{{botCards}}}, username : "{{username}}" };
</script>

