<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trade System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../resources/css/trade.css"> <!-- include custom stylesheet -->
</head>
<body>
    <!-- content of trading page-->
    <div class="container mt-4">
        <div class="row">
            <!-- trade modal -->
            <div class="col-md-3">
                <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#tradeModal">Propose Trade</button>
            </div>

            <!-- pending trades page -->
            <div class="col-md-9">
                <!-- Outgoing trades from the current user -->
                <h3>Outgoing Trades</h3>
                <ul class="list-group mb-4" id="outgoingTrades"></ul>
                <!-- Incoming trades to the current user -->
                <h3>Incoming Trades</h3>
                <ul class="list-group mb-4" id="incomingTrades"></ul>
                <!-- Accepted trades from current user-->
                <h3>Accepted Trades</h3>
                <ul class="list-group mb-4" id="acceptedTrades"></ul>
            </div>
        </div>
    </div>
    <!-- trade modal (the button) -->
    <div class="modal fade" id="tradeModal" tabindex="-1" aria-labelledby="tradeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tradeModalLabel">Propose a Trade</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="tradeForm">
                        <div class="mb-3">
                            <label for="offerCard" class="form-label">Your Cards</label>
                            <select id="offerCard" class="form-select">
                                <option value="">Select a card</option>
                                {{#each player_cards}}
                                    
                                    <option value="{{this.id}}">{{this.name}}
                                    (Atk:
                                    {{this.attack}}, Def:
                                    {{this.defense}})</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="tradeForCard" class="form-label">Trade For</label>
                            <select id="tradeForCard" class="form-select">
                                <option value="">Select a card</option>
                                {{#each all_cards}}
                                    
                                    <option value="{{this.id}}">{{this.name}}
                                    (Atk:
                                    {{this.attack}}, Def:
                                    {{this.defense}})</option>
                                {{/each}}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Trade</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/resources/js/trade.js"></script>
    <!-- Include the current username in a script tag for use in the JavaScript -->
    <script> const CURRENT_USER = "{{username}}";</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>