<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trade System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #001f3f; /* Dark blue background */
      color: white; /* Default text color for contrast */
    }

    .btn-primary {
      background-color: #0dae9e; /* Turquoise button */
      border: none;
    }

  </style>
</head>
<body>
  <div class="container mt-4">
    <h2 class="text-center mb-4">Trade System</h2>
    <div class="row">
      <!-- Trade Modal Button -->
      <div class="col-md-3">
        <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#tradeModal">Propose Trade</button>
      </div>

      <!-- Pending Trades Section -->
      <div class="col-md-9">
        <!-- Outgoing Trades -->
        <h3>Outgoing Trades</h3>
        <ul class="list-group mb-4" id="outgoingTrades">
          {{#each outgoing_trades}}
          <li class="list-group-item">
            <strong>To:</strong> {{this.to_user}} |
            <strong>Card Offered:</strong> {{this.offer_card}} |
            <strong>Card Requested:</strong> {{this.request_card}}
          </li>
          {{/each}}
        </ul>

        <!-- Incoming Trades -->
        <h3>Incoming Trades</h3>
        <ul class="list-group mb-4" id="incomingTrades">
          {{#each incoming_trades}}
          <li class="list-group-item">
            <strong>From:</strong> {{this.from_user}} |
            <strong>Card Offered:</strong> {{this.offer_card}} |
            <strong>Card Requested:</strong> {{this.request_card}}
          </li>
          {{/each}}
        </ul>

        <!-- Accepted Trades -->
        <h3>Accepted Trades</h3>
        <ul class="list-group mb-4" id="acceptedTrades">
          {{#each accepted_trades}}
          <li class="list-group-item">
            <strong>With:</strong> {{this.trade_partner}} |
            <strong>Card You Gave:</strong> {{this.given_card}} |
            <strong>Card You Received:</strong> {{this.received_card}}
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <!-- Trade Modal -->
  <div class="modal fade" id="tradeModal" tabindex="-1" aria-labelledby="tradeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="tradeModalLabel">Propose a Trade</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="tradeForm">
            <div class="mb-3">
              <label for="offerCard" class="form-label">Your Cards</label>
              <select id="offerCard" class="form-select">
                <option value="">Select a card</option>
                {{#each player_cards}}
                <option value="{{this.id}}">{{this.name}} (Atk: {{this.attack}}, Def: {{this.defense}})</option>
                {{/each}}
              </select>
            </div>
            <div class="mb-3">
              <label for="tradeForCard" class="form-label">Trade For</label>
              <select id="tradeForCard" class="form-select">
                <option value="">Select a card</option>
                {{#each all_cards}}
                <option value="{{this.id}}">{{this.name}} (Atk: {{this.attack}}, Def: {{this.defense}})</option>
                {{/each}}
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit Trade</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="/resources/js/trade.js"></script>
  <script>const CURRENT_USER = "{{username}}";</script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>